<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <TextView
        android:id="@+id/detailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="24dp"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/detailsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/detailsTitle"
        android:layout_below="@+id/detailsTitle"
        android:layout_marginTop="30dp"
        android:text="" />


    <Button
        android:id="@+id/detailsEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/detailsRemove"
        android:layout_alignBottom="@+id/detailsRemove"
        android:layout_alignParentRight="true"
        android:layout_marginRight="27dp"
        android:text="@string/edit" />

    <Button
        android:id="@+id/detailsRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/detailsName"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:text="@string/remove" />

    <TextView
        android:id="@+id/detailsLastUsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/detailsName"
        android:layout_below="@+id/detailsName"
        android:layout_marginTop="24dp"
        android:text="" />

</RelativeLayout>