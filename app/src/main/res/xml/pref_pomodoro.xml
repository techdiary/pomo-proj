<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="1200000"
        android:entries="@array/arrPomodoroDurationTitles"
        android:entryValues="@array/arrPomodoroDurationValues"
        android:key="pomodoroDuration"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/strPomodoroDuration" />

    <ListPreference
        android:defaultValue="300000"
        android:entries="@array/arrShortBreakDurationTitles"
        android:entryValues="@array/arrShortBreakDurationValues"
        android:key="shortBreakDuration"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/strShortBreakDuration" />

    <ListPreference
        android:defaultValue="900000"
        android:entries="@array/arrLongBreakDurationTitles"
        android:entryValues="@array/arrLongBreakDurationValues"
        android:key="longBreakDuration"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/strLongBreakDuration" />

    <ListPreference
        android:defaultValue="4"
        android:entries="@array/arrLongBreakIntervalTitles"
        android:entryValues="@array/arrLongBreakIntervalValues"
        android:key="shortBreakInterval"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/strLongBreakInterval" />

</PreferenceScreen>